    background: var(--body-background-color);
    border-color: var(--input-border-color);
    border-right: 0;
    border-radius: 8px 0 0 8px;
    &:hover,
    &:focus {
        background: var(--body-background-color) !important;
        border-color: var(--input-border-color) !important;
    }
    .selected-flag {
        &:hover {
            background: var(--body-background-color) !important;
