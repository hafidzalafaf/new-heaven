.blur-effect {
    position: relative;
    &:before {
        position: absolute;
        content: "";
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: var(--opacity-background-color);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10;
    }

    .blur-content {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 11;
        color: var(--text-secondary-color);
        font-size: 18px;
        /* letter-spacing: 8px; */
    }

    &.blur-mobile {
        &:before {
            position: absolute;
            content: "";
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: var(--opacity-background-color);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 10;
            color: var(--text-secondary-color);
            font-size: 14px;
            letter-spacing: 2px;
        }
    }
}

