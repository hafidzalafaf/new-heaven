    color: var(--text-primary-color) !important;
    &:focus {
        box-shadow: 0 0 0 0;
    }
}

.react-tel-input .country-list {
    background: var(--body-background-color);

    .country-name {
        color: var(--text-primary-color);
    }

    .dial-code {
