/* button */
.btn-primary {
    background: var(--button-primary-color) !important;
    color: var(--text-primary-color) !important;
    padding: 12px 16px;
    border-radius: 4px;
    border: 0;
    font-weight: 600;
    font-size: 14px;
    transition: 0.3s;
    &.btn-outline {
        background: linear-gradient(var(--main-background-color), var(--main-background-color)) padding-box,
            var(--text-gradient-color) border-box !important;
        border-radius: 4px;
        border: 1px solid transparent;
        color: var(--text-contrast-color) !important;
    }
    &.btn-mobile {
        border-radius: 8px;
        padding: 17px;
        font-size: 16px;
        line-height: 18px;
    }

    &:focus {
        box-shadow: none !important;
        outline: none !important;
    }
}

.btn-success {
    background: var(--button-success-color) !important;
    color: var(--text-primary-color) !important;
    padding: 12px 16px;
    border-radius: 4px;
    border: 0;
    font-weight: 600;
    font-size: 14px;
    &.btn-outline {
        background: var(--main-background-color) !important;
        border-radius: 4px;
        border: 1px solid var(--button-success-color) !important;
    }
    &.btn-mobile {
        border-radius: 8px;
        color: var(--text-contrast-color) !important;
        padding: 17px;
        font-size: 16px;
        line-height: 18px;
    }
}

.btn-danger {
    background: var(--button-danger-color) !important;
    color: var(--text-primary-color) !important;
    padding: 12px 16px;
    border-radius: 4px;
    border: 0;
    font-weight: 600;
    font-size: 14px;
    &.btn-sm {
        font-size: 12px;
        padding: 4px 6px;
    }
    &.btn-mobile {
        border-radius: 8px;
        color: var(--text-primary-color) !important;
        padding: 17px;
        font-size: 16px;
        line-height: 18px;
    }
    &.btn-outline {
        background: var(--main-background-color) !important;
        border-radius: 4px;
        border: 1px solid var(--button-danger-color) !important;
        color: var(--button-danger-color) !important;
    }
}

.btn-secondary {
    background: var(--button-secondary-color) !important;
    border: 0;
    padding: 12px 16px;
    &.btn-outline {
        background: var(--main-background-color) !important;
        border-radius: 4px;
        border: 1px solid var(--button-secondary-color) !important;
    }
    &.btn-mobile {
        border-radius: 8px;
        color: var(--text-secondary-color) !important;
        padding: 17px;
        font-size: 16px;
        line-height: 18px;
    }
}

.btn-input {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 12px 16px;
    gap: 8px;
    background: #019a97;
    border-radius: 0px 6px 6px 0px;
}

.btn-transparent {
    background: transparent;
    border: 0;
    outline: 0;
    width: 100%;
}

.btn-transparent:focus {
    border: none !important;
    outline: none !important;
    box-shadow: none !important;
}

button:disabled,
button[disabled] {
    filter: brightness(0.5) !important;
}
